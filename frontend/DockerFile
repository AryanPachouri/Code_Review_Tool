FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy application code
COPY . .

# Build for production (optional, comment out for development)
# RUN npm run build

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "start"]

# For production, use this instead:
# CMD ["npx", "serve", "-s", "build", "-l", "3000"]